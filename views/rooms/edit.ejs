<%- include ('../partials/header') %>
    <div class="row">
        
        <div style="width: 30%; margin: 25px auto;">
            <h3 style="text-align: center" class="text-capitalize">Edit <%= room.name %></h3>
            <form action="/rooms/<%=room._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" id="name" value="<%= room.name %>">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name="image" id="image"  title="Upload using image address" placeholder="image" value="<%= room.image %>" required>
                    <small>Upload using image address </small>
                </div>
                <div class="form-group">
                    <label for="cost">Cost</label>
                    <input class="form-control" type="number" name="cost" id="cost" value="<%= room.cost %>" step="0.01" min="0" required>
                </div>
                <div class="form-group">
                    <label for="location">Address</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= room.location %>">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="description" id="description" value="<%= room.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
            </form>
            <a href="/rooms">Go Back</a>
        </div>
    </div>
    <%- include ('../partials/footer') %>

