<%- include ('../partials/header') %>
    <div class="row">
        
        <div class="col-10 col-sm-10 col-md-8 col-lg-6 col-xl-6" style="width: 30%; margin: 25px auto;">
            <h1 style="text-align: center">Create Ad For New Room</h1>
            <form action="/rooms" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" id="name" placeholder="House Name">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name="image" id="image" title="Images should be uploaded using url" placeholder="Upload Images using url." required>
                    <small>Upload image </small>
                </div>
                <div class="form-group">
                    <label for="cost">Cost</label>
                    <input class="form-control" type="number" name="cost" id="cost" placeholder="9.99" step="0.01" min="0" required>
                </div>
                <div class="form-group">
                    <label for="location">Address</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Govindpuri, New Delhi">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="description" id="description" placeholder="Description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Rent</button>
                </div>
            </form>
            <a href="/rooms">Go Back</a>
        </div>
    </div>
    <%- include ('../partials/footer') %>

