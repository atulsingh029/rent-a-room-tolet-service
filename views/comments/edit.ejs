<%- include ('../partials/header') %>
    <div class="row">
        
        <div style="width: 30%; margin: 25px auto;">
            <h3 style="text-align: center">Edit Comment</h3>
            <form action="/rooms/<%= room_id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=comment.text %>" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update</button>
                </div>
            </form>
            <a href="/rooms">Go Back</a>
        </div>
    </div>
    <%- include ('../partials/footer') %>

