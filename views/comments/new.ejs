<%- include ('../partials/header') %>
    <div class="row">
        
        <div style="width: 30%; margin: 25px auto;">
            <h4 style="text-align: center" class="text-capitalize">Add New Comment to <%= room.name %></h4>
            <form action="/rooms/<%= room._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Comment</button>
                </div>
            </form>
            <a href="/rooms">Go Back</a>
        </div>
    </div>
    <%- include ('../partials/footer') %>

